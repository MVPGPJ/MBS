<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">手机管理</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" id="posupdate" action="/api/position/update" method="post"
        enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label for="phoneImg" class="col-sm-2 control-label">手机图片</label>

                <div class="col-sm-10">
                    <!--http://localhost:3000/upload/{{phoneImg}} -->
                    {{!-- <img src="http://localhost:3000/upload/{{phoneImg}}" style="width:50px;height:50px;" alt=""> --}}
                    <img src="http://172.16.17.48:3000/upload/{{phoneImg}}" style="width:50px;height:50px;" alt="">
                    <input type="file" class="form-control" name="phoneImg" id="phoneImg" placeholder="请选择手机图片">
                </div>
            </div>
            <div class="form-group">
                <label for="phoneName" class="col-sm-2 control-label">手机名称</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" name="phoneName" value="{{phoneName}}" id="phoneName"
                        placeholder="请手机名称">
                </div>
            </div>
            <div class="form-group">
                <label for="desc" class="col-sm-2 control-label">手机介绍</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" name="desc" value="{{desc}}" id="desc"
                        placeholder="请输入介绍文字">
                </div>
            </div>
            <div class="form-group">
                <label for="phoneCpu" class="col-sm-2 control-label">CPU</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" name="phoneCpu" value="{{phoneCpu}}" id="phoneCpu"
                        placeholder="请输入CPU">
                </div>
            </div>
            <div class="form-group">
                <label for="phonePhoto" class="col-sm-2 control-label">像素</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="phonePhoto" value="{{phonePhoto}}" id="phonePhoto"
                        placeholder="请输入像素">
                </div>
            </div>
            <div class="form-group">
                <label for="searchValue" class="col-sm-2 control-label">屏幕尺寸</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="searchValue" value="{{searchValue}}" id="searchValue"
                        placeholder="请输入尺寸">
                </div>
            </div>
            <div class="form-group">
                <label for="price" class="col-sm-2 control-label">价格</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="price" value="{{price}}" id="price"
                        placeholder="请输入价格">
                </div>
            </div>
            <div class="form-group">
                <label for="comments_total" class="col-sm-2 control-label">用户评价条数</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="comments_total" value="{{comments_total}}"
                        id="comments_total" placeholder="请输入条数">
                </div>
            </div>
        </div>

        <!-- /.box-body -->
        <div class="box-footer">
            <button type="button" id="posback" class="btn btn-default">返回</button>
            <button type="button" id="possubmit" class="btn btn-info pull-right">提交</button>
        </div>
        <!-- /.box-footer -->
        <input type="hidden" name="id" value="{{_id}}">
    </form>
</div>